<resources>



    <!-- extend one of the Theme.AppCompat themes -->
    <style name="Theme.Zion_BaekhyangFest" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">#ff373166</item>
        <item name="colorPrimaryDark">#ff28244b</item>
        <item name="colorAccent">#ff373166</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="Theme.Zion_BaekhyangFest.Overlay" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- customize the color palette -->
        <item name="colorPrimary">#ff373166</item>
        <item name="colorPrimaryDark">#ff28244b</item>
        <item name="colorAccent">#ff373166</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <!--</style>-->
</resources>
