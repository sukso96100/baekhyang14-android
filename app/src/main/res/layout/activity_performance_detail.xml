<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/my_awesome_toolbar"
            android:layout_height="160dp"
            android:layout_width="match_parent"
            android:minHeight="?actionBarSize"
            android:background="?colorPrimary"
            android:paddingBottom="16dp"
            android:gravity="bottom"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Turn"
            android:id="@+id/turn"
            android:layout_margin="16dp"
            android:drawableLeft="@drawable/ic_format_list_numbered_black_24dp"
            android:drawablePadding="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_people_black_24dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawablePadding="8dp"
            android:text="Performer"
            android:id="@+id/performer"
            android:layout_margin="16dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Desc"
            android:id="@+id/desc"
            android:layout_margin="16dp"
            android:drawableLeft="@drawable/ic_description_black_24dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:drawablePadding="8dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/send_feedback"
            android:id="@+id/button"
            android:layout_margin="16dp"/>

    </LinearLayout>
    </ScrollView>